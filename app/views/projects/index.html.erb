<% if notice.present? %>
  <div class="card-panel">
    <span class="blue-text text-darken-2"><%= notice %></span>
  </div>
<% end %>

<table class="highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Colour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td>
          <span class="badge" style="background-color:<%= project.colour %>">&nbsp;</span>
          <%= project.colour %>
        </td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: 'btn' %>
